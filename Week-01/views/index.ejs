<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
  <title>URL Shortener</title>
</head>
<body class="bg-light">
  <div class="container py-5">
    <h1 class="mb-4 text-center">ðŸ”— URL Shortener</h1>

    <form action="/shortUrls" method="POST" class="mb-4">
      <div class="input-group">
        <input required placeholder="Enter a full URL..." type="url" name="fullUrl" id="fullUrl" class="form-control">
        <button class="btn btn-success" type="submit">Shrink</button>
      </div>
    </form>

    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>" target="_blank"><%= shortUrl.full %></a></td>
            <td><a href="/<%= shortUrl.short %>" target="_blank"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.clicks %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>